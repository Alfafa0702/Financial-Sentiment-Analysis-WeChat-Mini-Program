/* 简单样式 */
.page { padding: 12px }
.form-row { display:flex; gap:8px; align-items:center }
.input { flex:1; padding:6px; border:1px solid #eee; border-radius:4px }
.reports { margin-top:12px }
.report-item { padding:8px; border-bottom:1px solid #f2f2f2 }
.title { font-weight:bold }
.meta { color:#999; font-size:12px }

/* 按钮样式 */
.btn {
	padding: 8px 12px;
	border-radius: 6px;
	border: none;
	color: #fff;
}
.btn-primary {
	background-color: #07c160;
}
.btn-download {
	background-color: #007AFF;
}
